{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid"
    },
    "firstname": {
      "type": "string"
    },
    "lastname": {
      "type": "string"
    },
    "email": {
      "type": "string",
      "format": "email"
    },
    "birthdate": {
      "type": "string",
      "format": "date"
    },
    "accounts": {
      "type": "array",
      "items": {
        "required": [
          "id",
          "creationTime",
          "balance"
        ],
        "properties": {
          "id": {
            "type": "integer"
          },
          "creationTime": {
            "type": "string"
          },
          "balance": {
            "type": "integer"
          }
        }
      }
    }
  }
}